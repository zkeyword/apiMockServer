body
    height: 100%

    ::-webkit-scrollbar
        width: 10px
        height: 2px
        background-color: #f5f5f5

    ::-webkit-scrollbar-track
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.1)
        border-radius: 10px
        background-color: #f5f5f5

    ::-webkit-scrollbar-thumb
        height: 20px
        border-radius: 10px
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.1)
        background-color: #555

.lt-header
    width: 100%
    height: 50px
    text-align: left
    z-index: 999999
    background: #fff
    position: fixed
    clear: both
    box-sizing: border-box
    padding: 10px 20px
    box-shadow: 0 0 5px rgba(#000, 0.1)

    .logo
        float: left
        font-size: 20px
        font-weight: bold

    .search
        float: right
  
        label
            display: inline-block
            height: 30px
            line-height: 30px
        
        input
            height: 30px
            padding-left: 3px
            box-sizing: border-box

.lt-main
    position: absolute
    z-index: 1
    top: 60px
    bottom: 10px
    left: 10px
    right: 10px
    background: #fff
    box-sizing: border-box
    display: flex
    min-width: 1003px

    .lt-left
        width: 200px
        padding: 10px
        margin: 0 20px 0 0
        border-right: 1px solid rgba(#000, 0.05)
        overflow: auto

        .menu
            width: 100%
            height: 100%

            &::-webkit-scrollbar-thumb
                background:#FFA711
                border-radius:4px

            a
                color:#666

                &:hover
                    font-weight: bold

            .item
                padding: 0 0 10px

            .interfacesName
                padding: 0 0 0 10px

            li
                line-height:30px
                padding-left:10px
                text-align:left
                cursor:pointer
                font-size:14px

                

    .lt-right
        flex: 1
        overflow-y: auto
        padding: 0 20px 0 0
