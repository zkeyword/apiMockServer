body
    height: 100%

.lt-header
    width: 100%
    height: 50px
    text-align: left
    z-index: 999999
    background: #fff
    position: fixed
    clear: both
    box-sizing: border-box
    padding: 10px 20px
    box-shadow: 0 0 5px rgba(#000, 0.1)

    .logo
        float: left
        font-size: 20px
        font-weight: bold

    .search
        float: right
  
        label
            display: inline-block
            height: 30px
            line-height: 30px
        
        input
            height: 30px
            padding-left: 3px
            box-sizing: border-box

.lt-main
    position: absolute
    z-index: 1
    top: 60px
    bottom: 10px
    left: 10px
    right: 10px
    background: #fff
    box-sizing: border-box
    display: flex
    min-width: 1003px


    .lt-left
        width: 200px
        padding: 10px
        margin: 0 20px 0 0
        border-right: 1px solid rgba(#000, 0.05)

        .menu
            width: 100%
            height: 100%

            &::-webkit-scrollbar-thumb
                background:#FFA711
                border-radius:4px

            a
                color:#666

                &:hover
                    font-weight: bold

            .item
                padding: 0 0 10px

            .interfacesName
                padding: 0 0 0 10px

            li
                line-height:30px
                padding-left:10px
                text-align:left
                cursor:pointer
                font-size:14px

                

    .lt-right
        flex: 1
        overflow-y: auto
        padding: 0 20px 0 0

        pre
            background: rgba(#000, 0.01)
            padding: 20px
            margin-top: 10px
            border: 1px solid rgba(#000, 0.05)
            border-radius: 5px

        .metadata
            border:1px solid #ddd
            padding: 10px 20px
            margin: 20px 0 20px
            
            .name
                font-size: 15px

            .list
                margin-top: 10px
                font-size: 12px

        // .resourceGroups

        //     .name
        //         font-size: 25px
        //         color: #333

        .resource

            .name
                font-size: 30px
                color: #333

            .detail
                margin: 0 0 20px
            
                p
                    padding: 10px 0 0

        .resources
            padding: 20px 0

            .name
                font-weight: bold
                font-size: 20px
                
            .detail
                padding: 10px 0 0

            .parameters
                padding: 10px 0 0

                .title
                    padding: 0 0 5px
                    font-weight: bold

        .resourcesList

            .action

                .actionName
                    margin: 20px 0 0
                    color:#1d9fd3
                    font-weight:bold
                    font-size: 16px

                .urlWrap
                    padding: 10px 0
                    .method
                        border: 1px solid #ddd
                        padding: 2px 5px

            .parameters
                // padding: 10px 0 0

                // .title
                //     padding: 0 0 5px
                //     font-weight: bold

                .list
                    padding: 0 10px 10px
                    
                    .item
                        border-bottom: 1px solid #eee

                        .nameBox
                            position: relative

                            .name
                                font-size: 18px

                            .tagWrap
                                position: absolute
                                top: -10px
                                right: -98px

                                .tag
                                    border: 1px solid #ddd
                                    padding: 1px 3px
                                    border-radius: 5px
                                    font-size: 5px
                                    background: #fff

                        .desc
                            padding: 0 0 0 100px

            img
                display:block

